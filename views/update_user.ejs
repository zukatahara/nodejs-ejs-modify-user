<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<!-- Main Site -->
<!-- <%= user %> -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex-justify-between">
      <div class="filter">
        <a href="/"> <i class="fa-solid fa-chevrons-left"></i>All User </a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">update User</h2>
      <span class="text-light">Uaw the below form to update an account</span>
    </div>
    <!-- update user form -->
    <!-- form handling -->
    <form method="POST" id="update_user" action="/api/user/<%= user._id %>">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= user._id %>" />
          <input
            type="text"
            name="name"
            value="<%= user.name %>"
            placeholder="Mark"
          />
        </div>
        <div class="form-group">
          <label for="Email" class="text-light">Email</label>
          <input
            type="text"
            name="email"
            value="<%= user.email %>"
            placeholder="ex@gmail.com"
          />
        </div>
        <div class="form-group">
          <label for="gender" class="text-light">Gender</label>
          <div class="radio inline">
            <input type="radio" name="gender" value="Male" aria-label="gender"
            <%= user.gender ==='Male' ? 'checked' :'' %> />
            <label for="gender" class="text-light">Male</label>
          </div>
          <div class="radio inline">
            <input type="radio" name="gender" value="Female" aria-label="gender"
            <%= user.gender ==='Female' ? 'checked':'' %> />
            <label for="gender" class="text-light">Female</label>
          </div>
        </div>
        <div class="form-group">
          <label for="gender" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" name="status" value="Active" aria-label="status"
            <%= user.status ==='Active' ? 'checked':'' %> />
            <label for="gender" class="text-light">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" name="status" value="Inactive"
            aria-label="status" <%= user.status ==='Inactive' ? 'checked':'' %>
            />
            <label for="gender" class="text-light">Inactive</label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
    <!-- /update user form -->
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
